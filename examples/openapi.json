{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Some open API Schemas example"
  },
  "paths": {
    "/dummy": {
      "get": {
        "parameters": [],
        "responses": {
          "200": {
            "description": "successful operation"
          }
        },
        "security": [{
          "api_key": []
        }]
      }
    }
  },
  "components": {
    "schemas": {
      "datamodels": {
        "type": "object",
        "properties": {
          "img": {
            "type": "object",
            "required": ["src", "alt"],
            "properties": {
              "src": {
                "type": "string"
              },
              "alt": {
                "type": "string"
              }
            }
          },
          "link": {
            "type": "object",
            "properties": {
              "href": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            }
          },
          "carouselTeasers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/datamodels/properties/newsTeaser"
            }
          },
          "aSimpleString": {
            "type": "string"
          },
          "aNumber": {
            "type": "number"
          },
          "anObject": {
            "type": "object",
            "properties": {
              "aNestedObject": {
                "type": "object",
                "properties": {
                  "prop1": {
                    "type": "string"
                  },
                  "2prop": {
                    "type": "string"
                  },
                  "nestedNestedObject": {
                    "type": "object",
                    "properties": {
                      "myArray": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "newsTeaser": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "link": {
                "$ref": "#/components/schemas/datamodels/properties/link"
              },
              "img": {
                "$ref": "#/components/schemas/datamodels/properties/img"
              }
            }
          },
          "footer": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "websiteDescription": {
                "type": "string"
              },
              "logo": {
                "$ref": "#/components/schemas/datamodels/properties/img"
              },
              "copyright": {
                "type": "string"
              },
              "footerLinks": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/datamodels/properties/link"
                }
              },
              ":type": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "websiteDescription",
              "logo"
            ]
          },
          ":itemsOrder": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "og:site":  {
            "type": "string"
          }
        }
      }
    }
  }
}
